<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#222144"
    android:background="@drawable/roundbackground"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/startLocationImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/startlocation"></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_more_vert_black_24dp"></ImageView>

        <ImageView
            android:id="@+id/endLocationImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/droplocation"></ImageView>

        <TextView
            android:id="@+id/StartLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/startLocationImage"
            android:text="Start Location"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/StartLocationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/startLocationImage"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:text="Start Location Time"
            android:layout_marginTop="20dp"></TextView>

        <TextView
            android:id="@+id/endLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/endLocationImage"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="End Location"
            android:textStyle="bold"
            android:layout_marginTop="65dp"></TextView>
        <TextView
            android:id="@+id/endLocationtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/endLocationImage"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:text="End Location Time"
            android:layout_marginTop="85dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/StartLocation"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:text="Total:"
            android:gravity="end"
            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/StartLocation"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/TravelAmtSymbol"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:text="$"
                android:gravity="end"
                android:layout_marginTop="15dp"
                ></TextView>
            <TextView
                android:id="@+id/TravelAmt"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textColor="#ffffff"
                android:text="Amt"
                android:gravity="end"
                android:layout_marginTop="15dp"
                ></TextView>
        </LinearLayout>



        <TextView
            android:id="@+id/TravelTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/StartLocation"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:text="Travel Time: "
            android:gravity="end"
            android:layout_marginTop="70dp"
            ></TextView>



    </RelativeLayout>

</LinearLayout>